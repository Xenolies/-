<% if (page.posts.length > 0) { %>
    <div id="recent-posts">
        <h1><%= config.title %></h1>
    </div>

    <div id="index-post">
        <% page.posts.sort('date', -1).limit(20).each(post => { %>
            <div class="recent-post-item">
                <a href="<%= url_for(post.path) %>"><%= post.title %></a>
                <time datetime="<%= post.date.toJSON() %>">
                    <% = date(post.date) %>
                </time>
            </div>
        <% }); %>
    </div>
<% } %>
